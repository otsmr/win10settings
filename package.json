{
    "name": "win10settings",
    "version": "0.0.2",
    "description": "Erweiterte Windows-Einstellungen",
    "author": "Tobias Müller",
    "main": "public/electron.js",
    "homepage": "./",
    "scripts": {
        "nodemon": "nodemon --watch public/electron/**/* --watch public/electron.js --exec \"npm run electron\"",
        "electron": "electron .",
        "dev": "concurrently \"set BROWSER=none&&npm start\" \"wait-on http://localhost:3000 && npm run nodemon\"",
        "start": "react-scripts start",
        "dist": "electron-builder",
        "build": "react-scripts build && npm run dist"
    },
    "build": {
        "appId": "de.oproj.win10settings",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "productName": "Erweiterte Windows-Einstellungen",
        "copyright": "Copyright (c) 2020 Tobias Müller",
        "buildVersion": "0.0.2",
        "win": {
            "icon": "public/img/logo.png"
        },
        "nsis": {
            "artifactName": "${productName} Setup.${ext}",
            "uninstallDisplayName": "${productName}",
            "oneClick": false
        }
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "electron-is-dev": "^1.2.0",
        "nconf": "^0.10.0",
        "node-fetch": "^2.6.1",
        "node-powershell": "^4.0.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.11.5",
        "@testing-library/react": "^11.1.1",
        "@testing-library/user-event": "^12.2.0",
        "@types/jest": "^26.0.15",
        "@types/markdown-it": "^10.0.2",
        "@types/node": "^14.14.6",
        "@types/react": "^16.9.55",
        "@types/react-dom": "^16.9.9",
        "concurrently": "^5.3.0",
        "electron": "^10.1.5",
        "electron-builder": "^22.9.1",
        "markdown-it": "^12.0.2",
        "node-sass": "^4.0.0",
        "nodemon": "^2.0.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-scripts": "^3.4.3",
        "typescript": "^4.0.5",
        "wait-on": "^5.2.0"
    }
}
